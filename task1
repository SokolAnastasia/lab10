# Ім'я першого студента, який створює файл із питанням
student_1_name = "Сокол Анастасія"

try:
    with open("питання.txt", "w") as file:
        # Записуємо ім'я студента та його питання у файл
        file.write(f"Студент: {student_1_name}\n")
        file.write("Питання з програмування мовою Python:\n")
        file.write("Яке призначення має метод 'try-except'?\n")
except Exception as e:
    print(f"Помилка: {e}")
# Ім'я другого студента, який відповідає на питання
student_2_name = "Нажаль ніхто не долучився"

try:
    with open("питання.txt", "a") as file:
        # Доповнюємо файл із відповіддю другого студента
        file.write(f"\n\nСтудент: {student_2_name}\n")
        file.write("Відповідь на питання:\n")
        file.write("Метод 'try-except' використовується для обробки винятків в Python. Це дозволяє програмістам уникнути зупинки програми в разі помилок та здійснити необхідні дії для їх виправлення.\n")
except Exception as e:
    print(f"Помилка: {e}")
